---
import MetricsChart from '../charts/MetricsChart.astro';

const chapter = {
  number: 2,
  title: "Purpose and Evolution"
};

const timeline = [
  { year: 2001, event: "Initial development at Google" },
  { year: 2003, event: "First paper published" },
  { year: 2004, event: "Widespread internal adoption" },
  { year: 2006, event: "Influences Hadoop's HDFS development" }
];

const applications = [
  "Search engine data processing and indexing",
  "Large-scale log analysis",
  "Content processing for multimedia services",
  "Machine learning pipelines",
  "Storage and analysis of service logs"
];
---

<div class="page">
  <h2 class="chapter-title">{chapter.number}. {chapter.title}</h2>

  <div class="timeline-box">
