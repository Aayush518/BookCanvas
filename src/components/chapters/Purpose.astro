    <div class="timeline">
      {timeline.map(({ year, event }) => (
        <div class="timeline-item">
          <span class="year">{year}</span>
          <p>{event}</p>
        </div>
      ))}
    </div>
  </div>

  <div class="applications-box">
    <h3>ðŸš€ Key Applications</h3>
    <ul>
      {applications.map(app => <li>{app}</li>)}
